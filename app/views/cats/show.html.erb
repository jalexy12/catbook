<h1><%= raw @cat.name %></h1>

<h2>Info</h2>

<dl class="dl-horizontal">
  <dt>Birthday</dt>
  <dd><%= @cat.localized_birthday %></dd>
</dl>

<%# Don't you see here some repetion? %>

<h2>Following</h2>

<ul>
  <% @cat.followers.each do |follower| %>
    <li><strong><%= follower.name %></strong></li>
  <% end %>
</ul>

<h2>Followers</h2>

<ul>
  <% @cat.followed_by.each do |follower| %>
    <li><strong><%= follower.name %></strong></li>
  <% end %>
</ul>

<%= link_to "Back", cats_path %>
<% if @cat.id == session[:cat_id] %>
	<%= link_to "Edit", edit_cat_path(@cat.id) %>
<% end %>